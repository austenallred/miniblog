<h1>Our blog posts <small> (<%= @posts.count %>)</h1>

<% @posts.each do |post| %>
  
   <h2> <%= post.title %> </h2>
    <%= post.body %>
    <h4><%= post.author_name %> | <%= post.published_at.to_date %></h4>
    <%= link_to 'Show', post %>
    <%= link_to 'Edit', edit_post_path(post) %>
    <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>

<br />

<%= link_to 'New Post', new_post_path %>
